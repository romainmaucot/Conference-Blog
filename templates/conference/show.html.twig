{% extends 'base.html.twig' %}

{% block title %}Conference{% endblock %}

{% block body %}
    <h1>Conference</h1>
    <a href="{{ path('conference_index') }}"><button>back to list</button></a>


    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ conference.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conference.description }}</td>
            </tr>
            <tr>
            <tr>
                <th>Event_date</th>
                <td>{{ conference.eventDate ? conference.eventDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ conference.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ conference.address }}</td>
            </tr>
                <th>Img</th>
                <td><img src="/images/{{ conference.img }}" width="30%"></td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('conference_edit', {'id': conference.id}) }}"><button>edit</button></a>

    {{ include('conference/_delete_form.html.twig') }}

    <h2>Rating History</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Mail</th>
                <th>Rate</th>
            </tr>
        </thead>
        <tbody>
    {% for user in users %}
            <tr>
                <td>{{ user.userId.firstname }}</td>
                <td>{{ user.userId.lastname }}</td>
                <td>{{ user.userId.mail }}</td>
                <td>{{ user.rate }} / 5</td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

{% endblock %}
