{% extends 'base.html.twig' %}

{% block title %}Conference{% endblock %}

{% block body %}
    <h1>Conference</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ conference.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conference.description }}</td>
            </tr>
            <tr>
            <tr>
                <th>Event_date</th>
                <td>{{ conference.eventDate ? conference.eventDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ conference.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ conference.address }}</td>
            </tr>
                <th>Img</th>
                <td><img src="/images/{{ conference.img }}" width="30%"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('conference_index') }}">back to list</a>

    <a href="{{ path('conference_edit', {'id': conference.id}) }}">edit</a>

    {{ include('conference/_delete_form.html.twig') }}
{% endblock %}
